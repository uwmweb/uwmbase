{{ attach_library('uwmbase/header') }}

<header class="uwm-header">
    <nav class="navbar navbar-expand-md flex-md-column">
    <div class="purple container-fluid">

    {# <div class="row purple"> #}
        {# <div class="col-sm-12 col-md-3 header-logo"> #}
            <a class="navbar-brand" href="/" title="{{ 'Home'|t }}" rel="home">
                <img src="/{{ directory }}/dist/images/uw-medicine-logo.svg"
                     height="21" width="158" alt="UW Medicine">
            </a>

            {# <div class="float-right header-toggles d-md-none"> #}
              <button type="button" class="navbar-toggler ml-auto text-white"
                        data-toggle="collapse"
                        data-target=".search-collapse">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>

                <button type="button" class="navbar-toggler text-white"
                        data-toggle="collapse"
                        data-target="#mainNavigationMobile"
                        aria-controls="mainNavigationMobile" aria-expanded="false" aria-label="Toggle main navigation">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>


            {# </div> #}
        {# </div> #}


    {# </div> #}
    <div id="quickLinksNavigation" class="uwm-quick-links ml-auto d-none d-md-block">
        {{ drupal_menu('uw-header---quick-links', 1, 1) }}
    </div>
        <div class="d-none d-lg-block">
            <form class="form-inline header-search-form"
                  action="/search" accept-charset="UTF-8" method="get">

                <div class="input-group header-search">

                    <input name="s" type="text" class="form-control" value=""
                           aria-label="Search terms" autocomplete="off">
                    <i class="fa fa-search" aria-hidden="true"></i>

                </div>

            </form>

        </div>
        <button type="button" class="navbar-toggler d-none d-md-inline-block d-lg-none text-white"
            data-toggle="collapse"
            data-target=".search-collapse">
        <i class="fa fa-search" aria-hidden="true"></i>
        </button>
    </div>

    <div class="search-collapse collapse">

    <form class="form-inline header-search-form"
          action="/search" accept-charset="UTF-8" method="get">
        <div class="input-group">
            <i class="fa fa-search uw-fa" aria-hidden="true"></i>
            <input name="s" title="{{ 'Search'|t }}" type="text"
                    class="form-control"
                    aria-label="Search terms" value="" autocomplete="off">
            <button type="button" class="navbar-toggler uw-fa"
                    data-toggle="collapse"
                    data-target=".search-collapse">
                <i class="fa fa-times" aria-hidden="true"></i>
            </button>
        </div>
    </form>
    </div>

    <div class="white container-fluid p-md-0 pl-lg-3">
    {# <div class="row white"> #}
        {# <div class="col-md-9 desktop-main-navigation"> #}

            {{ page.navigation }}
            {{ drupal_menu('uw-main-navigation', 0, 4) }}

        {# </div> #}
        {# <div class="col-md-3 make-a-gift-navigation"> #}
        <div id="makeAGift" class="uwm-make-a-gift-button ml-auto d-none d-md-block">
            {{ drupal_menu('uw-header---make-a-gift', 1, 1) }}
        </div>
        {# </div> #}

    {# </div> #}
    </div>
    <div class="row shadow"></div>


    {# {% include '@uwmbase/header/header-mobile.twig' %} #}

    </nav>
</header>

{# Header #}
{% if page.header %}
    {% block header %}
        <div class="row page-heading" role="heading">
            <div class="col-xs-12">
                {{ page.header }}
            </div>
        </div>
    {% endblock %}
{% endif %}
