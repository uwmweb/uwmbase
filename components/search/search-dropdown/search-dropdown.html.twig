{#
/**
 * @file
 * Default theme implementation for a facets item list.
 *
 * Available variables:
 * - items: A list of items. Each item contains:
 *   - attributes: HTML attributes to be applied to each list item.
 *   - value: The content of the list element.
 * - title: The title of the list.
 * - list_type: The tag for list element ("ul" or "ol").
 * - wrapper_attributes: HTML attributes to be applied to the list wrapper.
 * - attributes: HTML attributes to be applied to the list.
 * - empty: A message to display when there are no items. Allowed value is a
 *   string or render array.
 * - context: A list of contextual data associated with the list. May contain:
 *   - list_style: The ID of the widget plugin this facet uses.
 * - facet: The facet for this result item.
 *   - id: the machine name for the facet.
 *   - label: The facet label.
 *
 * @see facets_preprocess_facets_item_list()
 *
 * @ingroup themeable
 */
#}

    {% set searchWithinDefaults = [
      'Providers',
      'Locations',
      'Medical Services',
      'Patient Info & Resources',
      'Education',
      'Research',
      'Referrals'
    ]|sort %}

{% set title = title ? title :
  'expertise' in facet.id|lower ? 'Expertise' :
  'service' in facet.id|lower ? 'Medical service' :
  facet.id == 'general_search_facet_uwmsearchwithin' ? 'Show me' :
  facet.id == 'locations_facet_uwmsearchwithin' ? 'Show me' :
  facet.id == 'locations_facet_medical_services' ? 'Medical service' :
  facet.id == 'provider_facet_uwmsearchwithin' ? 'Show me' :
  facet.id == 'provider_facet_gender' ? 'Gender' :
  facet.id == 'provider_facet_languages' ? 'Language' :
  facet.id == 'provider_facet_medical_services' ? 'Medical service' :
  facet.id == 'provider_facet_accepting_patients' ? 'Accepting patients' : '' %}

{% set live_search = items|length > 6 ? 'true' : 'false' %}


<div
  class="dm-facets-selector dm-facets-widget-{{ facet.widget.type }} dm-facet-id-{{ facet.id }}">
  {#{{ devel_breakpoint() }}#}

  <select class="selectpicker show-tick form-control" title="{{ title }}"
          data-live-search="{{ live_search }}" data-width="100%"
          data-max-options="1" multiple>

    {% if items %}


      {% for item in items %}

        {% set count = item.value['#title']['#count'] %}
        {% if count is not empty %}
          {% set count %}({{ count }}){% endset %}
        {% endif %}

        {% set title = item.value['#title']['#value']|title|replace({"'S": "'s"}) %}
        {#{% if 'patient info' not in title|lower %} Hide "Patient Info & Resources" #}

        {% set title = title|replace({"Education": "School of Medicine"}) %}
        {% set title = "Patient Info" in title ? "Patient Info & Resources" : title %}
        {% set title = title == "F" ? "Female" : title %}
        {% set title = title == "M" ? "Male" : title %}


        {% set facet_item_value = item.value['#attributes']['data-drupal-facet-item-value'] %}
        {% set query = item.value['#url'].options['query'] %}
        {% set query_key = query['f'] is not empty ? 'f' : query['fs_p'] is not empty ? 'fs_p' : '' %}

        {% set value = '' %}
        {% for f in query[query_key] %}
          {% if ':' ~ facet_item_value in f %}
            {% set value = f %}
          {% endif %}
        {% endfor %}

        {#{% if value is empty %}#}
          {#Facet empties actove item; try to find key #}
          {#{% set last_item = items|last %}#}
          {#{% set last_item_query = last_item.value['#url'].options['query'] %}#}
          {#{% set value = last_item_query[query_key][loop.index] %}#}
        {#{% endif %}#}
        {##}



        {% set selected = item.value['#title']['#is_active'] ? 'selected="selected"' : '' %}

        {#{{ devel_breakpoint() }}#}

        <option data-url="{{ data_url }}"
                data-facet-value="{{ facet_item_value }}"
                value="{{ value }}"
                data-subtext="{{ count }}"
          {{ selected }}>
          {{ title }}</option>
        {#<li {{ item.attributes }}#}

      {% endfor %}
    {% endif %}


  </select>


</div>
