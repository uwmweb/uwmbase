<div class="facets-widget btn-group facets-widget-{{- facet.widget.type -}}">

    {% if facet.widget.type %}
        {% set attributes = attributes.addClass('item-list__' ~ facet.widget.type) %}
    {% endif %}

    {% if items is not empty %}
        <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle">
            {% if title is not empty %}
            {{ title }}
            {% else %}
            {{ 'Search within' |t }}
            {% endif %}
            <span class="caret"></span>
        </button>

        {#<button type="button" data-toggle="dropdown"#}
                {#class="btn btn-default dropdown-toggle"><span class="caret"></span>#}
        {#</button>#}

        {% if items %}

            {% set attributes = attributes.addClass('dropdown-menu') %}
            <{{ list_type }}{{ attributes }}>
                {% for item in items %}
                    <li{{ item.attributes }}>{{ item.value }}</li>
                {% endfor %}
            </{{ list_type }}>

        {% else %}
             empty
        {% endif %}

  {% endif %}

</div>
